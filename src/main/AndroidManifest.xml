<manifest 
    android:versionName="0.1" android:versionCode="1" package="nl.jqno.quickmail" xmlns:android="http://schemas.android.com/apk/res/android">
    
    <uses-sdk android:minSdkVersion="8"></uses-sdk>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application android:icon="@drawable/main_icon" android:label="@string/mail_app_name">
        <activity android:label="@string/config_app_name"
            android:name=".ConfigActivity"
            android:icon="@drawable/config_icon"
            android:taskAffinity="nl.jqno.quickmail.ConfigTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <activity android:label="@string/mail_app_name"
            android:name=".MailActivity"
            android:taskAffinity="nl.jqno.quickmail.MailTask"
            android:theme="@style/Invisible">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
            <intent-filter android:label="@string/sharebox_app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity android:label="@string/about_app_name"
            android:name=".AboutActivity"
            android:taskAffinity="nl.jqno.quickmail.ConfigTask">
        </activity>
    </application>
</manifest>
