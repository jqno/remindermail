<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="30dip">
    <TextView
        android:id="@+id/invisible_context_menu_view"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:visibility="gone" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/config_blurb"
            android:paddingBottom="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TableLayout
            android:id="@+id/config_setting_box"
            android:paddingBottom="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:paddingRight="10dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/config_name" />
                <TextView
                    android:id="@+id/config_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/config_mail" />
                <TextView
                    android:id="@+id/config_mail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>
                <Button
                    android:id="@+id/config_select"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_select" />
                <Button
                    android:id="@+id/config_about"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_about" />
                <Button
                    android:id="@+id/config_done"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/config_done" />
            </TableRow>
        </TableLayout>
        <TextView
            android:paddingTop="20dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_shortcut" />
    </LinearLayout>
</LinearLayout>
